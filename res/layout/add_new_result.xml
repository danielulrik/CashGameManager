<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/color_white_default"
                  android:textStyle="bold"
                  android:layout_marginBottom="5dp"
                  android:textSize="@dimen/regular_size"
                  android:text="@string/text_tournament_period"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/layout_dates"
                      android:background="@color/color_red"
                      android:orientation="horizontal"
                      android:layout_marginBottom="10dp"
                      android:gravity="center_vertical|center_horizontal">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textStyle="bold"
                      android:textColor="@color/color_white_default"
                      android:id="@+id/text_view_data_ini"
                      android:layout_marginRight="5dp"
                      android:textSize="@dimen/regular_size"
                      android:text="07/07/2015"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textStyle="bold"
                      android:textColor="@color/color_white_default"
                      android:layout_marginRight="5dp"
                      android:textSize="@dimen/regular_size"
                      android:text="a"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textStyle="bold"
                      android:id="@+id/text_view_data_fim"
                      android:textColor="@color/color_white_default"
                      android:textSize="@dimen/regular_size"
                      android:text="10/07/2015"/>

        </LinearLayout>

    </LinearLayout>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/color_white_default"
              android:layout_marginBottom="10dp"
              android:textSize="@dimen/regular_size"
              android:text="@string/title_period"
              android:id="@+id/textView2"
              android:gravity="center_horizontal"
              android:textStyle="bold"/>

    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/layout_container_dados_gerais"
                      android:orientation="vertical"/>
    </ScrollView>

</LinearLayout>